@model PersonalInfo
<!-- Main Content Starts -->
<section class="container-fluid main-container container-home p-0 revealator-slideup revealator-once revealator-delay1">
    <div class="color-block d-none d-lg-block"></div>
    <div class="row home-details-container align-items-center">
        <div class="col-lg-4 bg position-fixed d-none d-lg-block" style="background-image: url('@(Model.ResumeImage)');"></div>
        <div class="col-12 col-lg-8 offset-lg-4 home-details text-left text-sm-center text-lg-left">
            <div>
                <img src="@(Model.AvatarImage)" class="img-fluid main-img-mobile d-none d-sm-block d-lg-none" alt="@(Model.FullName)" />
                <h1 class="text-uppercase poppins-font">@(Model.FullName)</h1>
                <p class="dana-font">@(Model.AboutMe)</p>
                <a class="button" asp-action="Index" asp-controller="AboutMe">
                    <span class="button-text">بیشتر درباره من ؟!</span>
                    <span class="button-icon fa fa-arrow-left"></span>
                </a>
            </div>
        </div>
    </div>
</section>
<!-- Main Content Ends -->