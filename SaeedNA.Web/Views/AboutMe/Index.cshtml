@model AboutMeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title Starts -->
<section class="title-section text-left text-sm-center revealator-slideup revealator-once revealator-delay1">
    <h1>درباره <span>من</span></h1>
    <span class="title-bg">رزومه</span>
</section>
<!-- Page Title Ends -->
<!-- Main Content Starts -->
<section class="main-content revealator-slideup revealator-once revealator-delay1">
    <div class="container">
        <div class="row">
            <!-- Personal Info Starts -->
            <div class="col-12 col-lg-5 col-xl-6">
                <div class="row">
                    <div class="col-12">
                        <h3 class="text-uppercase custom-title mb-0 ft-wt-600">اطلاعات شخصی</h3>
                    </div>
                    <div class="col-12 d-block d-sm-none">
                        <img src="@(Model.SiteSettings.AvatarImage)" class="img-fluid main-img-mobile" alt="@(Model.SiteSettings.FullName)" />
                    </div>
                    <div class="col-6">
                        <ul class="about-list list-unstyled open-sans-font">
                            <li> <span class="title">نام و نام خانوادکی :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.FullName)</span> </li>
                            <li> <span class="title">سن :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Age) سال</span> </li>
                            <li> <span class="title">ملیت :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Nationality)</span> </li>
                            <li> <span class="title">شغل :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Slogans)</span> </li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul class="about-list list-unstyled open-sans-font">
                            <li> <span class="title">آدرس :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Address)</span> </li>
                            <li> <span class="title">تلفن :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.PhoneNumber)</span> </li>
                            <li> <span class="title">ایمیل  :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Email)</span> </li>
                            <li> <span class="title">زبان  :</span> <span class="value d-block d-sm-inline-block d-lg-block d-xl-inline-block">@(Model.SiteSettings.Language)</span> </li>
                        </ul>
                    </div>
                    <div class="col-12 mt-3">
                        <a class="button" href="@(Model.SiteSettings.ResumeFile)">
                            <span class="button-text">دانلود رزومه</span>
                            <span class="button-icon fa fa-download"></span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Personal Info Ends -->
            <!-- Boxes Starts -->
            <div class="col-12 col-lg-7 col-xl-6 mt-5 mt-lg-0">
                <div class="row">
                    @foreach(var item in Model.ServiceCounter)
                    {
                        <div class="col-6">
                            <div class="box-stats with-margin">
                                <h3 class="poppins-font position-relative">@item.ServiceCounterCount</h3>
                                <p class="open-sans-font m-0 position-relative text-uppercase">@item.ServiceCounterTitle</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- Boxes Ends -->
        </div>
        <hr class="separator">
        @if(Model.Skill.Count > 0)
        {
            <!-- Skills Starts -->
            <div class="row">
                <div class="col-12">
                    <h3 class="text-uppercase pb-4 pb-sm-5 mb-3 mb-sm-0 text-left text-sm-center custom-title ft-wt-600">مهارت های من </h3>
                </div>
                @foreach(var item in Model.Skill)
                {
                    <div class="col-6 col-md-3 mb-3 mb-sm-5">
                        <div class="c100 p@(item.SkillProgress)">
                            <span>@(item.SkillProgress)%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                        <h6 class="text-uppercase open-sans-font text-center mt-2 mt-sm-4">@item.SkillTitle</h6>
                    </div>
                }
            </div>
            <!-- Skills Ends -->
        }
        <hr class="separator">
        @if(Model.MyService.Count > 0)
        {
            <!-- MyService Starts -->
            <div class="row">
                <div class="col-12">
                    <h3 class="text-uppercase pb-4 pb-sm-5 mb-3 mb-sm-0 text-left text-sm-center custom-title ft-wt-600">خدمات من </h3>
                </div>
                @foreach(var item in Model.MyService)
                {
                    <div class="col-6 col-md-3 mb-3 mb-sm-5">
                        <div class="box-service with-margin">
                            <h2 class="poppins-font service-title">@item.MyServiceTitle</h2>
                            <p class="open-sans-font m-0 position-relative">@item.MyServiceText</p>
                        </div>
                    </div>
                }
            </div>
            <!-- MyService Ends -->
        }
        <hr class="separator mt-1">
        <!-- Experience & Education Starts -->
        @if(Model.History.Count > 0)
        {
        <div class="row">
            <div class="col-12">
                <h3 class="text-uppercase pb-5 mb-0 text-left text-sm-center custom-title ft-wt-600">تجربیات</h3>
            </div>
            <div class="col-lg-6 m-15px-tb">
                <div class="resume-box">
                    <ul>
                        @foreach(var item in Model.History.OrderByDescending(d => d.HistoryId).ToList())
                        {
                            <li>
                                <div class="icon">
                                    <i class="fa fa-briefcase"></i>
                                </div>
                                <span class="time text-uppercase">@item.HistoryDate</span>
                                <h5 class=" text-uppercase">@item.HistoryTitle <span class="place">@item.HistoryWorkPlace</span></h5>
                                <p>@item.HistoryDescription </p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!-- Experience & Education Ends -->
        }
    </div>
</section>
<!-- Main Content Ends -->