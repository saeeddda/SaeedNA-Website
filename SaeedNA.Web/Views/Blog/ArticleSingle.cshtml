@model PostShowDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="title-section text-left text-sm-center revealator-slideup revealator-once revealator-delay1">
    <h1>مقالات <span>من </span></h1>
    <span class="title-bg">مقالات </span>
</section>
<section class="main-content revealator-slideup revealator-once revealator-delay1">
    <div class="container">
        <div class="row">
            <article class="col-12">
                <div class="meta open-sans-font">
                    <span><i class="fa fa-user"></i> @Model.CategoryName</span>
                    <span class="date"><i class="fa fa-calendar"></i> @Model.CreateDate.ToShamsiDate() </span>
                    <span><i class="fa fa-tags"></i> @Model.Tags</span>
                </div>
                <h1 class="text-uppercase text-capitalize">@Model.Title</h1>
                <img src="@(PathExtension.UploadPath + Model.Image)" class="img-fluid" alt="@Model.Title" />
                <div class="blog-excerpt open-sans-font pb-5">
                    @Html.Raw(Model.Description)
                </div>
            </article>
        </div>
    </div>
</section>