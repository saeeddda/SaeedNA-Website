@model Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title Starts -->
<section class="title-section text-left text-sm-center revealator-slideup revealator-once revealator-delay1">
    <h1>مقالات <span>من </span></h1>
    <span class="title-bg">مقالات </span>
</section>
<!-- Page Title Ends -->
<!-- Main Content Starts -->
<section class="main-content revealator-slideup revealator-once revealator-delay1">
    <div class="container">
        <div class="row">
            <!-- Article Starts -->
            <article class="col-12">
                <!-- Meta Starts -->
                <div class="meta open-sans-font">
                    <span><i class="fa fa-user"></i> @Model.Category.CategoryName</span>
                    <span class="date"><i class="fa fa-calendar"></i> @Model.PostCreateDate </span>
                    <span><i class="fa fa-tags"></i> @Model.PostTags</span>
                </div>
                <!-- Meta Ends -->
                <!-- Article Content Starts -->
                <h1 class="text-uppercase text-capitalize">@Model.PostTitle</h1>
                <img src="@Model.PostFile" class="img-fluid" alt="@Model.PostTitle" />
                <div class="blog-excerpt open-sans-font pb-5">
                    @Html.Raw(Model.PostDescription)
                </div>
                <!-- Article Content Ends -->
            </article>
            <!-- Article Ends -->
        </div>
    </div>
</section>