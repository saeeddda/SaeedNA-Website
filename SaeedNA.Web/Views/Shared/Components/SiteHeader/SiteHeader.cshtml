@model SiteSettingsViewModel
@{
    if (Model.Seos.Any() && Model.PersonalInfos.Any() && Model.Settings.Any())
    {
        Html.SetSeoInfo(seo =>
        {
            foreach (var seoItem in Model.Seos)
            {
                foreach (var personalItem in Model.PersonalInfos)
                {
                    foreach (var settingItem in Model.Settings)
                    {
                        seo.SetCommonInfo(settingItem.SiteTitle, seoItem.MetaDescription, settingItem.SiteUrl, seoItem.MetaTags.Split(','));
                        seo.SetImageInfo(url: PathExtension.UploadPath + personalItem.ResumeImage, alt: personalItem.FullName);
                        seo.SetArticleInfo(personalItem.FullName, DateTime.Now);
                    }
                }
            }
        });
    }
}
@if (Model.Seos.Any() && Model.PersonalInfos.Any() && Model.Settings.Any())
{
    @Html.SeoTags()
}
<link rel="apple-touch-icon" sizes="180x180" href="@(PathExtension.UploadPath)img/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="@(PathExtension.UploadPath)img/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="@(PathExtension.UploadPath)img/favicon-16x16.png">
<link rel="manifest" href="@(PathExtension.UploadPath)img/site.webmanifest">
<link rel="mask-icon" href="@(PathExtension.UploadPath)img/safari-pinned-tab.svg" color="#5bbad5">
<meta name="msapplication-TileColor" content="#da532c">
<meta name="theme-color" content="#ffffff">
@if (Model.Settings.Any())
{
    @foreach (var item in Model.Settings) {
        <link rel="shortcut icon" href="@(PathExtension.UploadPath + item.SiteFavIcon)" type="image/png">
    }
}
