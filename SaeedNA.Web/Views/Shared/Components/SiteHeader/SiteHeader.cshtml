
@{
    var settings = ViewBag.Settings as Setting;
    var seoInfos = ViewBag.Seo as Seo;
    var personalInfo = ViewBag.PersonalInfo as PersonalInfo;

    if(!string.IsNullOrEmpty(seoInfos.MetaTags) && !string.IsNullOrEmpty(seoInfos.MetaDescription))
    {
        Html.SetSeoInfo(seo =>
        {
            seo.SetCommonInfo(settings.SiteTitle, seoInfos.MetaDescription, settings.SiteUrl, seoInfos.MetaTags.Split(','));
            seo.SetImageInfo(url: personalInfo.ResumeImage, alt: personalInfo.FullName);
            seo.SetArticleInfo(personalInfo.FullName, DateTime.Now);
        });
    }
}

@if(!string.IsNullOrEmpty(seoInfos.MetaTags) && !string.IsNullOrEmpty(seoInfos.MetaDescription))
{
    @Html.SeoTags()
}
