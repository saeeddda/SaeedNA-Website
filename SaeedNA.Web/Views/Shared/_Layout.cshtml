@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["Action"].ToString().ToLower();

    if(controller == "blog" && action == "single")
    {
        controller = "blog-post";
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.SiteTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="@(ViewBag.FullName)" />
    <meta name="description" content="@(ViewBag.MetaDescription)" />
    <meta name="keywords" content="@(ViewBag.MetaTags)" />
    <meta name="robots" content="index,follow" />
    <link rel="shortcut icon" href="@ViewBag.SiteFavIcon" type="image/png">

    <!-- Template CSS Files -->
    <link href="/site/css/bootstrap.min.css" rel="stylesheet">
    <link href="/site/css/preloader.min.css" rel="stylesheet">
    <link href="/site/css/circle.css" rel="stylesheet">
    <link href="/site/css/font-awesome.min.css" rel="stylesheet">
    <link href="/site/css/fm.revealator.jquery.min.css" rel="stylesheet">
    <link href="/site/fonts/dana/fontiran.css" rel="stylesheet">

    <!-- CSS Skin File -->
    <link href="/site/css/style.css" rel="stylesheet">
    <link href="/site/css/skins/@(ViewBag.SiteColor).css" rel="stylesheet">

    <!-- Modernizr JS File -->
    <script src="/site/js/modernizr.custom.js"></script>
</head>

<body class="@controller @(ViewBag.SiteMode)">

    <!-- Header Starts -->
    <header class="header" id="navbar-collapse-toggle">
        <!-- Fixed Navigation Starts -->
        <ul class="icon-menu d-none d-lg-block revealator-slideup revealator-once revealator-delay1">
            @if(ViewBag.MainMenu == true)
            {
                <li id="home" class="icon-box">
                    <i class="fa fa-home"></i>
                    <a asp-action="Index" asp-controller="Home">
                        <h2>خانه</h2>
                    </a>
                </li>
            }
            @if(ViewBag.AboutMeMenu == true)
            {
                <li id="aboutme" class="icon-box">
                    <i class="fa fa-user"></i>
                    <a asp-action="Index" asp-controller="AboutMe">
                        <h2>من؟</h2>
                    </a>
                </li>
            }
            @if(ViewBag.PortfolioMenu == true)
            {
                <li id="blog-project" class="icon-box">
                    <i class="fa fa-briefcase"></i>
                    <a href="/portfolio">
                        <h2>رزومه</h2>
                    </a>
                </li>
            }
            @if(ViewBag.ContactMeMenu == true)
            {
                <li id="contactus" class="icon-box">
                    <i class="fa fa-envelope-open"></i>
                    <a asp-action="Index" asp-controller="ContactUs">
                        <h2>ارتباط</h2>
                    </a>
                </li>
            }
            @if(ViewBag.BlogMenu == true)
            {
                <li id="blog-article" class="icon-box">
                    <i class="fa fa-comments"></i>
                    <a href="/blog">
                        <h2>مقالات</h2>
                    </a>
                </li>
            }
        </ul>
        <!-- Fixed Navigation Ends -->
        <!-- Mobile Menu Starts -->
        <nav role="navigation" class="d-block d-lg-none">
            <div id="menuToggle">
                <input type="checkbox" />
                <span></span>
                <span></span>
                <span></span>
                <ul class="list-unstyled" id="menu">
                    @if(ViewBag.MainMenu == true)
                    {
                        <li id="home"><a asp-action="Index" asp-controller="Home"><i class="fa fa-home"></i><span>خانه</span></a></li>
                    }
                    @if(ViewBag.AboutMeMenu == true)
                    {
                        <li id="aboutme"><a asp-action="Index" asp-controller="AboutMe"><i class="fa fa-user"></i><span>درباره من</span></a></li>
                    }
                    @if(ViewBag.PortfolioMenu == true)
                    {
                        <li id="blog-project"><a href="/portfolio"><i class="fa fa-folder-open"></i><span>نمونه کار</span></a></li>
                    }
                    @if(ViewBag.ContactMeMenu == true)
                    {
                        <li id="contactus"><a asp-action="Index" asp-controller="ContactUs"><i class="fa fa-envelope-open"></i><span>تماس با من </span></a></li>
                    }
                    @if(ViewBag.BlogMenu == true)
                    {
                        <li id="blog-article"><a href="/blog"><i class="fa fa-comments"></i><span>مقالات</span></a></li>
                    }
                </ul>
            </div>
        </nav>
        <!-- Mobile Menu Ends -->
    </header>
    <!-- Header Ends -->


    @RenderBody()


    <!-- Template JS Files -->
    <script src="~/site/js/jquery-3.5.0.min.js"></script>
    <script src="~/site/js/preloader.min.js"></script>
    <script src="~/site/js/fm.revealator.jquery.min.js"></script>
    <script src="~/site/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/site/js/masonry.pkgd.min.js"></script>
    <script src="~/site/js/classie.js"></script>
    <script src="~/site/js/cbpGridGallery.js"></script>
    <script src="~/site/js/jquery.hoverdir.js"></script>
    <script src="~/site/js/popper.min.js"></script>
    <script src="~/site/js/bootstrap.js"></script>
    <script src="~/site/js/custom.js"></script>
    @RenderSection("Scripts", required: false)
<script>
        $("#@controller").addClass("active");
        if ("@controller" === "blog") {
            $("#@controller-@action").addClass("active");
        }
</script>
</body>

</html>
