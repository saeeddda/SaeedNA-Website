@model IEnumerable<OnlineUser>

<div class="row" id="table-hover-row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p>لیست تمامی آی پی هایی که از وبسایت بازدید کرده اند.</p>
                <!-- table hover -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">کد یکتا</th>
                                <th scope="col">آی پی آدرس</th>
                                <th scope="col">تاریخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.UserGuid</td>
                                    <td>@item.UserIp</td>
                                    <td>@item.VisitDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <!-- Pagination Starts -->
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if(ViewBag.Page != 1)
                            {
                                <li class="page-item"><a class="page-link px-1" asp-action="Index" asp-controller="OnlineUser" asp-route-id="@(ViewBag.Page - 1)"><i class="bx bx-left-arrow-alt"></i></a></li>
                            }
                            @for(int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                <li class="page-item @(((int)ViewBag.Page==i)?"active":"")"><a class="page-link px-1" asp-action="Index" asp-controller="OnlineUser" asp-route-id="@i">@i</a></li>
                            }
                            @if(ViewBag.PageCount != ViewBag.Page)
                            {
                                <li class="page-item"><a class="page-link px-1" asp-action="Index" asp-controller="OnlineUser" asp-route-id="@(ViewBag.Page + 1)"><i class="bx bx-right-arrow-alt"></i></a></li>
                            }
                        </ul>
                    </nav>
                </div>
                <!-- Pagination Ends -->
            </div>
        </div>
    </div>
</div>