@model BasePaging

<nav aria-label="Page navigation">
    <ul class="pagination pagination-borderless justify-content-center mt-2">
        @if(Model.StartPage < Model.PageId)
        {
            <li class="page-item previous"><a class="page-link" href="?PageId=@(Model.PageId - 1)"><i class="bx bx-chevron-left"></i></a></li>
        }
        @for(int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(Model.PageId == i ? "active" : "")"><a class="page-link" href="?PageId=@i">@i</a></li>
        }
        @if(Model.EndPage > Model.PageId)
        {
            <li class="page-item next"><a class="page-link" href="?PageId=@(Model.PageId + 1)"><i class="bx bx-chevron-right"></i></a></li>
        }
    </ul>
</nav>