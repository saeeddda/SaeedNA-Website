    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item mr-auto">
                <a class="navbar-brand" href="/">
                    @if ( infos != null) {
                        <div class="brand-logo">
                            <img class="logo" src="@(PathExtension.UploadPath + infos.AvatarImage)" alt="@infos.FullName" />
                        </div>
                        <h2 class="brand-text mb-0">@infos.FullName</h2>
                    }else{
                        <div class="brand-logo">
                            <img class="logo" src="@(PathExtension.UploadPath)/img/SiteLogo.png" alt="Site Logo" />
                        </div>
                        <h2 class="brand-text mb-0">نام و نام خانوادگی</h2>
