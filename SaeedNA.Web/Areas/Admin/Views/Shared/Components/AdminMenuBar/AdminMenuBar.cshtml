@{
    var infos = ViewBag.PersonalInfo as PersonalInfoGetSetDTO;
}

<div class="header-navbar-shadow"></div>
<nav class="header-navbar main-header-navbar navbar-expand-lg navbar navbar-with-menu fixed-top ">
    <div class="navbar-wrapper">
        <div class="navbar-container content">
            <div class="navbar-collapse" id="navbar-mobile">
                <div class="mr-auto float-left bookmark-wrapper d-flex align-items-center">
                    <ul class="nav navbar-nav">
                        <li class="nav-item mobile-menu d-xl-none mr-auto">
                            <a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#!.">
                                <i class="ficon bx bx-menu"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <ul class="nav navbar-nav float-right">
                    <li class="dropdown dropdown-user nav-item">
                        <a class="dropdown-toggle nav-link dropdown-user-link" href="#!." data-toggle="dropdown">
                            <div class="user-nav d-sm-flex d-none">
                                @if (infos != null) {
                                    <span class="user-name">@infos.FullName</span>
                                }else{
                                    <span class="user-name">نام کاربری</span>
                                }
                            </div>
                            <span>
                                @if (infos != null){
                                    <img class="round" src="@(PathExtension.UploadPath + infos.AvatarImage)" alt="@infos.FullName" height="40" width="40">
                                }else{
                                    <img class="round" src="@(PathExtension.UploadPath)/img/SiteLogo.png" alt="Site Logo" height="40" width="40">
                                }
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right pb-0">
                            <a class="dropdown-item" asp-action="Index" asp-controller="Settings" asp-area="Admin"><i class="bx bx-user mr-50"></i> ویرایش پروفایل </a>
                            <a class="dropdown-item" asp-action="Index" asp-controller="Email" asp-area="Admin"><i class="bx bx-envelope mr-50"></i> صندوق ارتباط </a>
                            <div class="dropdown-divider mb-0"></div>
                            <a class="dropdown-item" asp-action="LogOut" asp-controller="Account"><i class="bx bx-power-off mr-50"></i> خروج </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

