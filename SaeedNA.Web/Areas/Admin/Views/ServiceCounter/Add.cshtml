@model ServiceCounter

<form asp-action="Add" asp-controller="ServiceCounter" asp-area="Admin" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="ServiceCounterTitle">عنوان</label>
            <input type="text" class="form-control" asp-for="ServiceCounterTitle">
            <span asp-validation-for="ServiceCounterTitle" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="ServiceCounterCount">متن خدمت</label>
            <input type="text" class="form-control" asp-for="ServiceCounterCount">
            <span asp-validation-for="ServiceCounterCount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">ثبت</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
    </div>
</form>