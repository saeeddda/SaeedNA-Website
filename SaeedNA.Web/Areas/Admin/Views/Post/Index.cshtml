@model IEnumerable<Post>
@{
    ViewData["Title"] = "بلاگ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row" id="table-hover-row">
    <div class="col-12 d-flex flex-sm-row flex-column justify-content-end">
        <a asp-action="Add" asp-controller="Post" asp-area="Admin" class="btn btn-success"><i class="bx bx-list-plus"></i>افزودن نوشته</a>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p>لیست تمامی نوشته های ثبت شده در سایت.</p>
            </div>
            <!-- table hover -->
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">کد</th>
                            <th scope="col">عنوان نوشته</th>
                            <th scope="col">دسته بندی</th>
                            <th scope="col">نوع نوشته</th>
                            <th scope="col">منتشر شده ؟</th>
                            <th scope="col">تاریخ ایجاد</th>
                            <th scope="col">بازدید</th>
                            <th scope="col">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.PostId</td>
                                <td>@item.PostTitle</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    @if(item.PostType == "article")
                                    {
                                        <span>مقاله</span>
                                    }
                                    else if(item.PostType == "project")
                                    {
                                        <span>پروژه</span>
                                    }
                                </td>
                                <td>
                                    @if(item.IsPublished)
                                    {
                                        <span class="text-success">بله</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">خیر</span>
                                    }
                                </td>
                                <td>@item.PostCreateDate</td>
                                <td>@item.PostVisit</td>
                                <td>
                                    <a class="pl-2" href="/post/@(item.PostId)/@(item.PostTitle)">
                                        <i class="badge-circle badge-circle-light-secondary bx bx-show font-medium-1"></i>
                                    </a>
                                    <a class="pl-2" asp-action="Edit" asp-controller="Post" asp-area="Admin" asp-route-id="@item.PostId">
                                        <i class="badge-circle badge-circle-light-secondary bx bx-edit font-medium-1"></i>
                                    </a>
                                    <a class="pl-2" onclick="deletePost(@item.PostId)">
                                        <i class="badge-circle badge-circle-light-secondary bx bx-trash font-medium-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function deletePost(id) {
            Swal.fire({
                title: "آیا شما مطمئن هستید ؟",
                text: "درصورت حذف شدن قابل برگشت نیست!",
                type: "warning",
                showCancelButton: !0,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "بله! مطمئن هستم.",
                confirmButtonClass: "btn btn-primary",
                cancelButtonText: "لغو کن",
                cancelButtonClass: "btn btn-danger ml-1",
                buttonsStyling: !1
            }).then(function (t) {
                if (t.value) {
                    $.post("/Admin/Post/Delete/" + id, function (result) {
                        if (result.status === "ok") {
                            setTimeout(function () {
                                location.reload();
                            }, 300);
                        } else if (result.status === "error") {
                            Swal.fire({
                                title: "اشکال در حذف!",
                                text: "در هنگام حذف با خطایی مواجه شدیم.",
                                type: "error",
                                confirmButtonText: "تائید",
                                confirmButtonClass: "btn btn-success"
                            })
                        }
                    });
                }
                else if (t.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire({
                        title: "لغو شد",
                        text: "درخواست لغو شد. اطلاعات شما ایمن است",
                        type: "error",
                        confirmButtonText: "تائید",
                        confirmButtonClass: "btn btn-success"
                    })
                }
            });
        }
    </script>
}